# Expert Dollop - Docker Environment Configuration
# Copy this file to .env and fill in your values

# ==============================================================================
# Database Configuration
# ==============================================================================
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=expert_dollop
POSTGRES_PORT=5432

# ==============================================================================
# Redis Configuration
# ==============================================================================
REDIS_PORT=6379

# ==============================================================================
# RabbitMQ Configuration
# ==============================================================================
RABBITMQ_USER=rabbitmq
RABBITMQ_PASSWORD=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672

# ==============================================================================
# Application Security
# ==============================================================================
SECRET_KEY=change-this-to-a-random-secret-key-in-production
DEBUG=false
ALLOWED_HOSTS=localhost,127.0.0.1

# ==============================================================================
# Backend Service Ports
# ==============================================================================
FASTAPI_PORT=8000
SPELLBOOK_PORT=8001
SECURITY_PORT=8002
MTG_PORT=8003

# ==============================================================================
# Frontend Service Ports
# ==============================================================================
FRONTEND_PORT=3000
N8N_FRONTEND_PORT=5678

# ==============================================================================
# Nginx Proxy Ports
# ==============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ==============================================================================
# AI/ML Model Configuration
# ==============================================================================
OLLAMA_PORT=11434
OLLAMA_BASE_URL=http://ollama:11434

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# Model Names
MODEL_NAME=gpt-4
MODEL_EMBEDDING_NAME=text-embedding-3-small
GOOSE_MODEL=gpt-4
GOOSE_PROVIDER=openai

# ==============================================================================
# Vector Database Configuration
# ==============================================================================
CHROMA_PORT=8004
CHROMA_ALLOW_RESET=true

# ==============================================================================
# Firecrawl Configuration
# ==============================================================================
FIRECRAWL_DB_USER=postgres
FIRECRAWL_DB_PASSWORD=postgres
FIRECRAWL_DB_NAME=firecrawl
FIRECRAWL_POSTGRES_PORT=5433
FIRECRAWL_REDIS_PORT=6380
FIRECRAWL_API_PORT=3002
PLAYWRIGHT_PORT=3001
HTML_TO_MD_PORT=3002

# Firecrawl Settings
USE_DB_AUTHENTICATION=false
BULL_AUTH_KEY=
TEST_API_KEY=
LOGGING_LEVEL=info
BLOCK_MEDIA=false

# Proxy Configuration (optional)
PROXY_SERVER=
PROXY_USERNAME=
PROXY_PASSWORD=

# ==============================================================================
# N8N Configuration
# ==============================================================================
N8N_PORT=5678
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=http://localhost:5678/
N8N_DB_NAME=n8n
N8N_AI_ENABLED=true
N8N_ENCRYPTION_KEY=
N8N_JWT_SECRET=
N8N_API_KEY=

# ==============================================================================
# MCP Server Configuration
# ==============================================================================
VIRUSTOTAL_API_KEY=
FIRECRAWL_API_KEY=

# ==============================================================================
# Analytics & Monitoring
# ==============================================================================
AI_ANALYTICS_PORT=3003
AI_CHAT_PORT=3004

# Analytics Configuration
POSTHOG_API_KEY=
POSTHOG_HOST=

# External Services
SLACK_WEBHOOK_URL=
SUPABASE_ANON_TOKEN=
SUPABASE_URL=
SUPABASE_SERVICE_TOKEN=
SELF_HOSTED_WEBHOOK_URL=

# ==============================================================================
# Timezone & Locale
# ==============================================================================
GENERIC_TIMEZONE=UTC
TZ=UTC

# ==============================================================================
# Build Configuration
# ==============================================================================
NODE_VERSION=22
PYTHON_VERSION=3.12
BUILD_ENV=production
NX_CLOUD_AUTH_TOKEN=

# ==============================================================================
# URL Configuration
# ==============================================================================
API_URL=http://localhost:8000
N8N_EDITOR_BASE_URL=http://localhost:5678
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_OLLAMA_URL=http://localhost:11434
