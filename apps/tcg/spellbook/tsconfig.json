{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2023"],
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "@expert-dollop/shared/utils": ["../../../libs/shared/utils/src/index.ts"],
      "@expert-dollop/shared/data-access": ["../../../libs/shared/data-access/src/index.ts"],
      "@expert-dollop/tcg/data-access": ["../../../libs/tcg/data-access/src/index.ts"],
      "@expert-dollop/tcg/feature": ["../../../libs/tcg/feature/src/index.ts"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
