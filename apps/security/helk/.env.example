# HELK + SecurityOnion Environment Configuration
# Copy this file to .env and customize for your environment

# Elasticsearch Configuration
ELASTIC_VERSION=8.18.8
ELASTIC_PASSWORD=changeme
ELASTIC_CLUSTER_NAME=helk-security-platform
ELASTIC_NODE_NAME=helk-so-node-1
ES_JAVA_OPTS=-Xms4g -Xmx4g

# Kibana Configuration
KIBANA_SYSTEM_PASSWORD=changeme
KIBANA_ENCRYPTION_KEY=min-32-byte-long-strong-encryption-key

# Logstash Configuration
LOGSTASH_SYSTEM_PASSWORD=changeme
LS_JAVA_OPTS=-Xms2g -Xmx2g

# Spark Configuration
SPARK_WORKER_MEMORY=4g
SPARK_WORKER_CORES=4

# Network Configuration
SUBNET=172.18.0.0/16

# Monitoring
XPACK_MONITORING_ENABLED=true

# Security
SSL_ENABLED=true
SSL_VERIFICATION_MODE=none
